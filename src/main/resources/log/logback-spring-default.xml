<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <appender name="consoleAppender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %highlight(level=%-5level) %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="consoleAppender" />
    </root>

    <!-- Uncomment the following lines to enable DEBUG logging for specific packages -->
    <!--
    <logger name="com.example.yourpackage" level="DEBUG">
        <appender-ref ref="STDOUT" />
    </logger>
    -->
</configuration>